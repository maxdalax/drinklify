{
  "manifest_version": 2,
  "name": "Drinklify",
  "description": "This extension will remind you to drink water!",
  "version": "1.0",
  "icons": {"128": "icon_128.png" },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    
    "notifications",
    "alarms"
  ] 
}